<%= @display_month_names[:current] %><br>
<%= link_to "<<#{@display_month_names[:previous]}", expenses_path(display_month_number: ((@display_month_number - 1) % 12), display_year: @display_year) %>     
<%= link_to "#{@display_month_names[:coming]}>>", expenses_path(display_month_number: ((@display_month_number + 1) % 12), display_year: @display_year) %>
<table border ="1">
  <tr>
    <th>Week</th>
    <th>Cost</th>
    <th>Purchaser</th>
  </tr>
  <% @expenses.each do |expense| %>
    <tr>
      <td>
        <%= expense.week %>    
      </td>
      <td>
        <%= expense.amount %><br>
      </td>
      <td>
        <%= expense.user.name %><br>
      </td>
    </tr>
  <% end %>
</table>
