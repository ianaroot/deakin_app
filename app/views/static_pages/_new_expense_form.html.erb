<%= form_for expense, html: { id: "#{kind}_expense_form"} do |f| %>
  <%= f.label :"#{kind}" %>
  <%= f.text_field :amount, placeholder: "amount", id: "#{kind}_expense_amount" %>
  <%= f.hidden_field :kind, value: kind %>
  <input id="expense_date" name="expense[date]" type="date">
  <%= f.submit value: "record #{kind} purchase" %>
<% end %>